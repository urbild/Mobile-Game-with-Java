<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibTekrar"
            android:layout_width="111dp"
            android:layout_height="120dp"
            android:background="@drawable/tekrar"
            android:onClick="tekrar" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/ibExit"
            android:layout_width="111dp"
            android:layout_height="match_parent"
            android:background="@drawable/exit"
            android:onClick="exit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivYeniRekor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/orakcekic"
            android:visibility="gone" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skor: "
                    android:textColor="#050505"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="50"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="100sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:text="Rekor: "
                    android:textColor="#0B0A0A"
                    android:textSize="50sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRekor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="100"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="100sp"
                    android:textStyle="bold" />

            </TableRow>
        </TableLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="80dp" />

    </LinearLayout>
</LinearLayout>